<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">  
        <Button
            android:id="@+id/mainOnFoundAdvertisedName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
    	    android:text="OnFoundAdvertisedName"
        />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">  
        <Button
            android:id="@+id/mainOnLostAdvertisedName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
    	    android:text="OnLostAdvertisedName"
        />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">  
        <Button
            android:id="@+id/mainOnLinkEstablished"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
    	    android:text="OnLinkEstablished"
        />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">  
        <Button
            android:id="@+id/mainOnLinkError"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
    	    android:text="OnLinkError"
        />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">  
        <Button
            android:id="@+id/mainOnLinkLost"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
    	    android:text="OnLinkLost"
        />
    </LinearLayout>
    
</LinearLayout>
