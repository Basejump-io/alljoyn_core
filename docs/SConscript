import os
Import('env')
# Build docs
if env['DOCS'] == 'html':
    doxy_bld = Builder(action = 'cd ${SOURCE.dir} && doxygen ${SOURCE.file}')
    env.Append(BUILDERS = {'Doxygen': doxy_bld})
    # the target directory 'docs/tmp' is never built this will cause doxygen 
    # to run every time DOCS == 'html'
    env.Doxygen(source='Doxygen_html', target=Dir('tmp'))
    env.Clean('Doxygen_html', Dir('html'))
    #env.Command(Dir('tmp'), 'Doxygen_html', 'doxygen ${SOURCE.file}')
elif env['DOCS'] == 'dev':
    doxy_bld = Builder(action = 'doxygen ${SOURCE.file}')
    env.Append(BUILDERS = {'cd ${SOURCE.dir} && Doxygen': doxy_bld})
    # the target directory 'docs/tmp' is never built this will cause doxygen 
    # to run every time DOCS == 'html'
    env.Doxygen(source='Doxygen_dev', target=Dir('tmp'))
    env.Clean('Doxygen_html', Dir('html'))
elif env['DOCS'] == 'pdf':
    doxy_bld = Builder(action = 'cd ${SOURCE.dir} && doxygen ${SOURCE.file}')
    env.Append(BUILDERS = {'Doxygen': doxy_bld})
    # the target directory 'docs/tmp' is never built this will cause doxygen 
    # to run every time DOCS == 'pdf' making refman.tex a target makes sure this
    # command is run before building the pdf output.
    env.Doxygen(source='Doxygen_pdf', target=[Dir('tmp'), File('./latex/refman.tex')])
    #copy the custom style to the latex folder generated by doxygen.
    Command('./latex/quic.sty','./quic.sty',Copy("$TARGET", "$SOURCE"))
    env.PDF('./latex/refman.pdf', './latex/refman.tex')
    env.Clean('Doxygen_pdf', Dir('latex'))