Import('env')

# Install sample source
if env['OS'] == 'android':
    distDir = '$DISTDIR/samples/bus-daemon-user'
    env.Install(distDir, env.Glob('android/AndroidManifest.xml'))
    env.Install(distDir, env.Glob('android/.classpath'))
    env.Install(distDir, env.Glob('android/.project'))
    env.Install(distDir, env.Glob('android/default.properties'))
    env.Install(distDir, Dir('android/src').srcnode())
    env.Install(distDir, Dir('android/res').srcnode())
